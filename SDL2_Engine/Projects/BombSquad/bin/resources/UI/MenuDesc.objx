mainMenu = {
	//! Create a background panel
	00backgroundPnl = {
		//! Flag the type of the UI element
		type = "panel"

		//! Position to take over entire screen
		x = 0
		y = 0
		width = 1280
		height = 720

		//! Assign the image
		image = "./Textures/MenuBackground.png"
	}

	//! Create a title for the menu
	01titlePnl = {
		//! Flag the type of the UI element
		type = "panel"

		//! Position the panel at the top part of the screen
		x = 412
		y = 25
		width = 456
		height = 382

		//! Assign the image
		image = "./Textures/Title.png"

		borderColour = "00000000"
	}

	//! Create the button used to start the game
	02gameBtn = {
		//! Flag the type of the UI element
		type = "button"

		//! Tag this element should progress to the game
		tag = "playerSetup"

		//! Position aligned in the center of the screen
		x = 440
		y = 417
		width = 400
		height = 50

		//! Label the button
		text = "Play Game"

		//! Assign font values
		font = "../Fonts/Ebrima.ttf"
		fontSize = 36
	}

	//! Create the button used to navigate to the options menu
	03optionsBtn = {
		//! Flag the type of the UI element
		type = "button"

		//! Tag this element should progress to the game
		tag = "optionsMenu"

		//! Position aligned in the center of the screen
		x = 440
		y = 487
		width = 400
		height = 50

		//! Label the button
		text = "Options"

		//! Assign font values
		font = "../Fonts/Ebrima.ttf"
		fontSize = 36
	}

	//! Create the button used to navigate to the credits menu
	04creditsBtn = {
		//! Flag the type of the UI element
		type = "button"

		//! Tag this element should progress to the game
		tag = "creditsMenu"

		//! Position aligned in the center of the screen
		x = 440
		y = 547
		width = 400
		height = 50

		//! Label the button
		text = "Credits"

		//! Assign font values
		font = "../Fonts/Ebrima.ttf"
		fontSize = 36
	}
}

