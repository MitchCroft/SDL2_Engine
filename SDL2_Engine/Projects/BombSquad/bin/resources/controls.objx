*       NOTE!!!                                                                                                                                                                                        *
*       Each control definition needs to have the below listed to operate properly                                                                                                                     *
*                                                                                                                                                                                                      *
*       inputDevice - Defines which input device should be used for this control schemes                                                                                                               *
*           |- id - Defines the ID of the GamePad to use the control scheme with                                                                                                                       *
*       verticalMove - Object that defines the controls that should be used to move the player vertically                                                                                              *
*       horizontalMove - Object that defines the controls that should be used to move the player horizontally                                                                                          *
*       place - Object that defines the controls that should be used to place a bomb                                                                                                                   *
*       detonate - Object that defines the controls that should be used to detonate a mine                                                                                                             *
*                                                                                                                                                                                                      *
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////*/

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////                                                                                                    //////////////////////////////////////////////////
//////////////////////////////////////////////////                                                GamePads                                            //////////////////////////////////////////////////
//////////////////////////////////////////////////                                                                                                    //////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

//! Single control scheme that will be shared across all game pads, you can however define them individually if you wish
gamePads = {
    //Assign the Game Pad physical devices
    inputDevice = "gamepad"
    id = "all"  

    //Define the movement controls
    verticalMove = {
        inputType = "axis"
        axis = "left_y"

        invert = true
    }

    horizontalMove = {
        inputType = "axis"
        axis = "left_x"
    }

    //Define combat actions
    place = {
        inputType = "axis"
        axis = "right_trigger"
    }

    detonate = {
        inputType = "button"
        posBtn = "a"
    }
}

